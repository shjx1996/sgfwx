page{
 background-color: #f5f5f5;
display: flex;
flex-direction: column;
height: 100%
}

.self-info{
height: 15%;
width: 100%;
background-color: white;
display: flex;
flex-direction: row;
align-items: center;
border-top: 12px solid #f5f5f5;
border-bottom: 18px solid #f5f5f5;
}

.userinfo-avatar {
  border-radius: 128rpx;
  width: 130rpx;
  height: 130rpx;
  display:block;
  overflow: hidden;
}
.text-name{
  font-size: 35rpx;
  width: 50rpx;
  height: 50rpx;
}

.name-number{
  display: flex;
  flex-direction: column;
  align-items: center;

}

.text-item{
  font-size: 30rpx;
}

.view-area{
display: flex;
flex-direction: column;
height: 45%;
width: 100%;
}

.contact{
width: 100%;
}

.view-item{
display: flex;
flex-direction: row;
width: 100%;
height: 30%;
background-color: white;
}

.view-item1{
  width:10%;
  display: flex;
  flex-direction: row; 
  align-items: center;
}

.view-item2{
  display: flex;
  flex-direction: row; 
  justify-content: space-between; 
  align-items: center;
  width:94%;
  border-bottom: 1px solid lightgray; 
}

.view-item2-last{
  display: flex;
  flex-direction: row; 
  justify-content: space-between; 
  align-items: center;
  width:90%;
}

.image-item{
  width: 50rpx;
  height: 50rpx;
}

.image-arrow{
  width: 50rpx;
  height: 50rpx;
}

.image3{
  width: 4rpx;
  height: 4rpx;
}

.btn{
  height:50px;
  width:50px;
  margin-right: 0
} 

.img{
width: 28px;
height: 28px;
position: fixed;
right:45rpx;
bottom:60rpx
}